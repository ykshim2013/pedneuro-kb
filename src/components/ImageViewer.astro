---
interface Props {
  src: string;
  alt: string;
  caption?: string;
  type?: 'mri' | 'eeg' | 'histology' | 'clinical' | 'diagram' | 'general';
}

const { src, alt, caption, type = 'general' } = Astro.props;

const typeLabel = {
  mri: 'MRI',
  eeg: 'EEG',
  histology: 'Histology',
  clinical: 'Clinical Photo',
  diagram: 'Diagram',
  general: 'Image',
}[type];

const typeBadgeColor = {
  mri: 'bg-purple-100 text-purple-800',
  eeg: 'bg-amber-100 text-amber-800',
  histology: 'bg-green-100 text-green-800',
  clinical: 'bg-red-100 text-red-800',
  diagram: 'bg-blue-100 text-blue-800',
  general: 'bg-slate-100 text-slate-800',
}[type];
---

<figure class="my-6">
  <div class="image-viewer group relative rounded-xl overflow-hidden bg-slate-900 border border-slate-200">
    {type !== 'general' && (
      <div class="absolute top-3 left-3 z-10">
        <span class={`px-2 py-1 rounded-md text-xs font-semibold ${typeBadgeColor}`}>
          {typeLabel}
        </span>
      </div>
    )}

    <img
      src={src}
      alt={alt}
      loading="lazy"
      class="w-full h-auto cursor-zoom-in transition-transform duration-300 group-hover:scale-105"
      onclick="this.classList.toggle('scale-150'); this.classList.toggle('cursor-zoom-out'); this.classList.toggle('cursor-zoom-in');"
    />

    <!-- Zoom controls -->
    <div class="absolute bottom-3 right-3 z-10 opacity-0 group-hover:opacity-100 transition-opacity">
      <div class="flex items-center gap-1 bg-black/60 rounded-lg px-2 py-1">
        <svg class="w-4 h-4 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 21l-6-6m2-5a7 7 0 11-14 0 7 7 0 0114 0zM10 7v3m0 0v3m0-3h3m-3 0H7" />
        </svg>
        <span class="text-xs text-white">Click to zoom</span>
      </div>
    </div>
  </div>

  {caption && (
    <figcaption class="mt-2 text-sm text-slate-500 text-center italic">
      {caption}
    </figcaption>
  )}
</figure>
