---
import { getCategoryById } from '../lib/categories';

interface Props {
  title: string;
  description: string;
  category: string;
  difficulty: string;
  tags: string[];
  lastUpdated: string;
  slug: string;
}

const { title, description, category, difficulty, tags, lastUpdated, slug } = Astro.props;
const cat = getCategoryById(category);

const difficultyClass = {
  basic: 'badge-basic',
  intermediate: 'badge-intermediate',
  advanced: 'badge-advanced',
}[difficulty] || 'badge-basic';
---

<a
  href={`/articles/${slug}`}
  class="group block bg-white rounded-xl shadow-sm border border-slate-200 p-5 hover:shadow-md hover:border-slate-300 transition-all duration-200"
>
  <div class="flex items-start justify-between gap-3 mb-3">
    <h3 class="font-semibold text-slate-900 group-hover:text-blue-600 transition-colors line-clamp-2">
      {title}
    </h3>
    <span class={`px-2 py-0.5 rounded-full text-xs font-semibold shrink-0 ${difficultyClass}`}>
      {difficulty}
    </span>
  </div>

  <p class="text-sm text-slate-500 line-clamp-2 mb-4">{description}</p>

  <div class="flex items-center justify-between">
    <div class="flex items-center gap-2">
      {cat && (
        <span class="px-2 py-0.5 bg-blue-50 text-blue-700 text-xs font-medium rounded-md">
          {cat.icon} {cat.name}
        </span>
      )}
    </div>
    <span class="text-xs text-slate-400">{lastUpdated}</span>
  </div>

  {tags.length > 0 && (
    <div class="flex flex-wrap gap-1.5 mt-3">
      {tags.slice(0, 4).map(tag => (
        <span class="px-2 py-0.5 bg-slate-100 text-slate-500 text-xs rounded">#{tag}</span>
      ))}
      {tags.length > 4 && (
        <span class="text-xs text-slate-400">+{tags.length - 4} more</span>
      )}
    </div>
  )}
</a>
