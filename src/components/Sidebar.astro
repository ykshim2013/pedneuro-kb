---
import { categories } from '../lib/categories';

interface Props {
  currentCategory?: string;
}

const { currentCategory } = Astro.props;
---

<div class="sticky top-24 space-y-6">
  <!-- Categories navigation -->
  <div class="bg-white rounded-xl shadow-sm border border-slate-200 p-4">
    <h3 class="font-semibold text-slate-900 mb-3 text-sm uppercase tracking-wider">Categories</h3>
    <nav class="space-y-1">
      {categories.map(cat => (
        <a
          href={`/categories/${cat.id}`}
          class:list={[
            'flex items-center gap-2 px-3 py-2 rounded-lg text-sm transition-colors',
            currentCategory === cat.id
              ? 'bg-blue-50 text-blue-700 font-medium'
              : 'text-slate-600 hover:bg-slate-50 hover:text-slate-900',
          ]}
        >
          <span>{cat.icon}</span>
          <span class="truncate">{cat.name}</span>
        </a>
      ))}
    </nav>
  </div>

  <!-- Quick actions -->
  <div class="bg-white rounded-xl shadow-sm border border-slate-200 p-4">
    <h3 class="font-semibold text-slate-900 mb-3 text-sm uppercase tracking-wider">Quick Access</h3>
    <div class="space-y-2">
      <a href="/search" class="flex items-center gap-2 px-3 py-2 rounded-lg text-sm text-slate-600 hover:bg-slate-50 hover:text-slate-900 transition-colors">
        <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 21l-6-6m2-5a7 7 0 11-14 0 7 7 0 0114 0z" />
        </svg>
        Search Articles
      </a>
      <a href="/" class="flex items-center gap-2 px-3 py-2 rounded-lg text-sm text-slate-600 hover:bg-slate-50 hover:text-slate-900 transition-colors">
        <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 12l2-2m0 0l7-7 7 7M5 10v10a1 1 0 001 1h3m10-11l2 2m-2-2v10a1 1 0 01-1 1h-3m-6 0a1 1 0 001-1v-4a1 1 0 011-1h2a1 1 0 011 1v4a1 1 0 001 1m-6 0h6" />
        </svg>
        Home
      </a>
    </div>
  </div>
</div>
